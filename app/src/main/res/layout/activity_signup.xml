<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fyp.ride_sharing_aos.activity.SignupActivity"
    android:background="@drawable/hkust_bgimg"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/signup_username"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="@string/signup_hint_username" />
            <TextView
                android:id="@+id/username_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/signup_username_require"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/signup_password"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:hint="@string/signup_hint_password"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/password_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/signup_password_require"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/signup_itsc"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/signup_itsc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="15dp"
                android:hint="@string/signup_hint_itsc"
                android:background="@drawable/rounded_edittext"
                android:gravity="center" />

            <co.ceryle.segmentedbutton.SegmentedButtonGroup
                android:id="@+id/type_segmentedButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:sbg_animateSelector="bounce"
                app:sbg_animateSelectorDuration="500"
                app:sbg_backgroundColor="@color/white"
                app:sbg_dividerColor="#e91e63"
                app:sbg_dividerPadding="10dp"
                app:sbg_dividerRadius="10dp"
                app:sbg_dividerSize="1dp"
                app:sbg_position="1"
                app:sbg_radius="20dp"
                app:sbg_ripple="true"
                app:sbg_rippleColor="#e91e63"
                app:sbg_selectorColor="#e91e63"
                app:sbg_selectorTextColor="@color/white"
                app:sbg_shadow="true"
                app:sbg_shadowElevation="3dp"
                app:sbg_shadowMargin="4dp">

                <Button
                    android:text="@string/signup_radio_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:textAllCaps="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:text="@string/signup_radio_stafft"
                    android:textAllCaps="false" />
            </co.ceryle.segmentedbutton.SegmentedButtonGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/signup_gender"
                android:textColor="@color/white"
                android:textSize="20sp" />



            <co.ceryle.segmentedbutton.SegmentedButtonGroup
                android:id="@+id/gender_segmentedButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="-10dp"
                app:sbg_animateSelector="bounce"
                app:sbg_animateSelectorDuration="500"
                app:sbg_backgroundColor="@color/white"
                app:sbg_dividerColor="#e91e63"
                app:sbg_dividerPadding="10dp"
                app:sbg_dividerRadius="10dp"
                app:sbg_dividerSize="1dp"
                app:sbg_position="1"
                app:sbg_radius="20dp"
                app:sbg_ripple="true"
                app:sbg_rippleColor="#e91e63"
                app:sbg_selectorColor="#e91e63"
                app:sbg_selectorTextColor="@color/white"
                app:sbg_shadow="true"
                app:sbg_shadowElevation="3dp"
                app:sbg_shadowMargin="4dp">

                <Button
                    android:text="@string/signup_radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:textAllCaps="false" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:text="@string/signup_radio_female"
                    android:textAllCaps="false" />
            </co.ceryle.segmentedbutton.SegmentedButtonGroup>


            <ImageButton
                android:id="@+id/signup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/signup"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
